<div id="background">
		<header class = cf >
			<div class ="wrapper_wide">
				<a href="#" id="logo">Podcast</a>
				<nav>
					<ul>
						<% unless user_signed_in? %>
						<li><%= link_to "Explore", users_path %></li>
						<li><%= link_to "Sign In", new_user_session_path %></li>
						<li><%= link_to "Create a Podcast", new_user_registration_path %></li>
						<% else %>
						<li><a href="#">Dashboard</a></li>
						<li><%= link_to "Explore", users_path %></li>
						<li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
						<% end %>
					</ul>
				</nav>
			</div>
		</header>
		<div class ="wrapper_skinny">
			<h1>Discover your new favorite<br> podcast, or create your own</h1>
			<%= link_to "Create a Podcast", new_user_registration_path, class:"button button_highlight" %>
			<%= link_to "Explore", users_path, class:"button button_white" %>
		</div>
</div>