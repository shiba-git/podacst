	<div id="banner" class = "podcasts_banner">
		<h1>Discover your new favorite podcast</h1>
	</div>

	<div id="podcasts" class = "cf">
		<div class="wrapper">
			<ul>
				<% @users.each do |user|%>
					<%= link_to user do %>
					<li>
						<%= image_tag user.thumbnail.url(:thumb) %>
						<div class="podcast_overview">
							<h2><%= user.title %></h2>
							<p class="episode_count">1 Episode</p>
						</div>
					</li>
					<% end %>
				<% end %>
			</ul>
		</div>
	</div>