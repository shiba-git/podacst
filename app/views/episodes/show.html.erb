<div id="podcast_show">
		<div id="show_banner">
			<div class="wrapper_skinny">
				<h1>The Rocketship Podcast</h1>
				<p class="description">Business Explored. The podcast that inspires tens of thousands of entrepreneurs each week. Join us as we dive into everything from funding to growth, culture to sales and everything in between. New interview every Sunday and a full episode every Wednesday.</p>
				<a href="#" class="subscribe_link">iTunes</a>
				<a href="#" class="subscribe_link">Stitcher</a>
				<a href="#" class="subscribe_link">PodBay</a>
			</div>
		</div>

		<div id="breadcrumb">
			<%= link_to users_path do %>
				All Podcasts 
				<span>/</span>
				<%= link_to @user.title, user_path(@user) %>
				<span>/</span>
				<%= @episode.title %>
			<% end %>
		</div>

		<div id="episode_content">
			<div class="wrapper_skinny">
				<img src="images/pieter_levels.png" alt="Pieter Levels"
				class = "current_episode_thumbnail">
				<h2><%= @episode.title %></h2>
				<p class="description">
					<%= @episode.description %>
				</p>
			</div>
		</div>

		<div id="episodes">
			<div class="wrapper_skinny">
				<ul class="cf">
					<% @episodes.each do |episode| %>
						<li class="cf">
							<div class="episode_thumbnail">
								<a href="episode.html">
									<img src="images/pieter_levels.png" alt="Pieter Levels">
								</a>
							</div>
							<div class="episode_overview">
								<h2><%= link_to episode.title, user_episode_path(@user, episode) %></h2>
								<p class="description">
									<%= truncate(episode.description, length: 150) %>
								</p>
							</div>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
		
		<div class="pagination">
			<span class="previous_page disabled">Previous</span>
			<em class="current">1</em>
			<a href="#">2</a>
			<a href="#" class="next_page">Next</a>
		</div>
	</div>