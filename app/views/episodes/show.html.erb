<div id="podcast_show">
		<div id="show_banner">
			<div class="wrapper_skinny">
				<h1><%= @user.title %></h1>
				<p class="description"><%= @user.description %></p>
				<% unless @user.itunes.blank? %>
				<a href="<%= @user.itunes %>" class="subscribe_link">iTunes</a>
				<% end %>

				<% unless @user.stitcher.blank? %>
				<a href="<%= @user.stitcher %>" class="subscribe_link">Stitcher</a>
				<% end %>

				<% unless @user.podbay.blank? %>
				<a href="<%= @user.podbay %>" class="subscribe_link">PodBay</a>
				<%end %>
			</div>
		</div>

		<div id="breadcrumb">
			<%= link_to users_path do %>
				All Podcasts 
				<span>/</span>
				<%= link_to @user.title, user_path(@user) %>
				<span>/</span>
				<%= @episode.title %>
			<% end %>
		</div>

		<div id="episode_content">
			<div class="wrapper_skinny">
				<%= image_tag @episode.episode_thumbnail.url(:thumb), class: "current_episode_thumbnail"%>
				<h2><%= @episode.title %></h2>
				<p class="description">
					<%= @episode.description %>
				</p>
			</div>
		</div>

		<div id="episodes">
			<div class="wrapper_skinny">
				<ul class="cf">
					<% @episodes.each do |episode| %>
						<li class="cf">
							<div class="episode_thumbnail">
								<a href="episode.html">
									<%= image_tag episode.episode_thumbnail.url(:thumb) %>
								</a>
							</div>
							<div class="episode_overview">
								<h2><%= link_to episode.title, user_episode_path(@user, episode) %></h2>
								<p class="description">
									<%= truncate(episode.description, length: 150) %>
								</p>
							</div>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
		
		<div class="pagination">
			<span class="previous_page disabled">Previous</span>
			<em class="current">1</em>
			<a href="#">2</a>
			<a href="#" class="next_page">Next</a>
		</div>
	</div>